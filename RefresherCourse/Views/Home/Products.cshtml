@model List<Product>
@{
    ViewBag.Title = "Products";
}

<div class="row">
    @{
        if (Model.Count > 0)
        {
            foreach (Product item in Model)
            {
                <div class="col-md-3">
                    <div class="productItem">
                        <h4>@item.Title</h4>
                        <span>@item.Manufacturer</span>
                        <img src="~/Content/Images/Products/@item.Image" class="img-fluid" />
                        <a href="/Home/ShowProduct/@item.ID">Læs Mere.</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12">
                <b>Din søgning gav ingen resultater.</b>
            </div>
        }
    }
</div>